<div class="container">
	<h2>Search:</h2>
	
	<%= form_tag recipes_path, method: 'get' do %>
		<%= text_field_tag :search, nil, class: "button3", placeholder: "enter recipe name here" %>
		<%= submit_tag 'Search Recipes', class: "button3" %>
	<% end %>

</div>
<div class="container">
	<h2>Recipes:</h2>
 	<% @recipes.each do |recipe| %>
	 	<p><%= link_to recipe.name, recipe_path(recipe) %></p>
	 	<p><%= recipe.try(:rating) %></p>
	<% end %>
</div>
