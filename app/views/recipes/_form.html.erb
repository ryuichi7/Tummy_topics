
<%= form_for recipe do |f| %>
	<%= f.hidden_field :user_id, value: current_user.id %>

	<div class="form-group">
		<%= f.label 'Recipe Name:' %><br>
		<%= f.text_field :name, class: "form-control" %><br>
	</div>

	<div class="form-group">
		<%= f.label 'Description:' %><br>
		<%= f.text_area :description,  cols: 55, rows: 10, class: "form-control" %><br>
	</div>
	
	<div class="panel panel-default">	
		<div class="panel-heading"><%= f.label 'Ingredients:' %></div>
		<div class="panel-body">
			<%= f.fields_for :ingredients_attributes do |ingredients| %>
				<%= render 'ingredients/fields', ingredients: ingredients %>
			<% end %>
			<div id="new-form"></div>
		</div>
	</div>
	
	<div class='form-group'>
		<button class='btn btn-primary' id='button' data-url="/recipes/ingredients/new">add another ingredient</button>
	</div>
	
	<div class="form-group">
		<%= f.label 'Directions:' %><br>
		<%= f.text_area :directions,  cols: 55, rows: 10, placeholder: "Please put each step on a separate line", class: "form-control" %><br>
	</div>

	<div>
		<%= f.submit nil, class: "btn btn-primary" %><br>
	</div>
<% end %>


